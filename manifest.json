{
	"manifest_version": 2,

	"name": "Github raw downloader",
	"description":"This extension downloads individual files from a github repo",
	"version": "1.0",

	"background": {
    		"scripts": ["background.js"],
    		"persistent": false
  	},	

	"page_action": {
		"default_icon": "icon.png",
		"default_popup":"popup.html"
	},
	"permissions": [
		"declarativeContent",
		"activeTab",
		"https://*.githubusercontent.com/",
		"https://*.googleapis.com/"
	]
}
